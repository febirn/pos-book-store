{% extends 'templates/default.twig' %}
{% block title %} List Category {% endblock %}

{% block headContent %} List Category <a href="" style="color:green"><i class="fa fa-book"></i></a>{% endblock %}

	{% block content %}
			<section class="content">
				<div class="row">
	<div class="col-xs-12">
    <div class="panel panel-default">
	    <div class="panel-body">
	    	<table id="example2" class="table table-bordered table-striped table-hover">
	    		
	    <thead>
			<tr>
		    	<th class="col-md-1 text-center">No</th>
				<th>Name Category</th>
				<th>Option</th>
		     </tr>
	        	</thead>
	    </thead>
	    <tbody>
	    	{% for data in category %}
	    	{% set i = i + 1 %}
	         <tr>
			   <td class="text-center">{{i}}</td>
			    <td>{{data.name}}</td>
			    <td>
			         <a href="{{path_for('category.del' , {('id'): data.id})}}" title=" Remove Data" style="color:red" data-toggle="tooltip" data-placement="left"><i class="fa fa-trash-o"></i></a></button>

			         <a href="{{path_for('category.edit' , {('id'): data.id})}}" data-toggle="tooltip" data-placement="right" title=" Edit Data" ><i class="fa fa-edit"></i></a> 
			    </td>
			</tr>
			{% endfor %}
	    	</table>
	    </div>
	</div>
</div>
	{% endblock %}