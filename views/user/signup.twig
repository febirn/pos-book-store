{% extends 'user/app.twig' %}
{% block title %} Signup User {% endblock %}	
{% block content %}
<div class="row " style="padding:50px ; margin:20px">
    <div class="col s10 ">
        <div class="card darken-1">
            <div class="card-content">
                 <center>
                    <span class="card-title" style="font-family:impact">
                        Signup User
                    </span>
                </center>

        	    <form action="{{ path_for('user.signup')}}" method="post">
        		{# Form Username #}
                <div class="form-group {{errors.username ? 'has-error' : ''}}">
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" name="username" id="username" class="validate" value="{{old.username}}">
                            <label for="username" data-error=" Username Can Not Be Used" data-success="Username Can Be used"><span class="glyphicon glyphicon-user">Username</span></label>
                            {% if errors.username %}
                                <span class="help-block">
                                    {{errors.username | first}}
                                </span>
                            {% endif %}          
                        </div>
                    </div>
                </div>

        		{# Form Name #}
            	<div class="form-group {{errors.name ? 'has-error' : ''}}">
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" name="name" id="name" class="validate" value="{{old.name}}">
                            <label for="name" data-error="Name Can Not Be Used" data-success="Last Name Can Be Used"><span class="glyphicon glyphicon-indent-right ">Name</span></label>
                            {% if errors.name %}
                                <span class="help-block">
                                    {{errors.name | first}}
                                </span>
                            {% endif %}          
                        </div>
                    </div>
                </div>

            	<div class="form-group {{errors.password ? 'has-error' : ''}}">
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="password" name="password" id="password" class="validate" value="{{old.password}}">
                            <label for="password" data-error="Wrong Password" data-success="Password Can Be Used"><span class="glyphicon glyphicon-eye-close">password</span></label>
                            {% if errors.password %}
                                <span class="help-block">
                                    {{errors.password | first}}
                                </span>
                            {% endif %}          
                        </div>
                    </div>
                </div>		
                <button type="submit" class="btn btn-default" style="margin:10px">
                    <span class="glyphicon glyphicon-share-alt">Sign Up</span>
                </button>
                </form>
            
                <div class="card-action" style="background:url('')">
                    <a href="{{ path_for('user.signup')}}">| Sign Up |</a>
                    <a href="{{ path_for('user.signin')}}" style="float:right">| Sign In |</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}	