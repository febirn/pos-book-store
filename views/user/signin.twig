{% extends 'user/app.twig' %}
{% block title %} Login Admin {% endblock %}	
 
{% block content %}

		<div class="row " style="padding:50px ; margin:20px">
      <div class="col s10 ">
        <div class="card darken-1">
          <div class="card-content">
            <center><span class="card-title" style="font-family:impact"> Login Admin </span></center>
	           <form action="{{path_for('user.signin')}}" method="post">

		{# Form Username #}
		  <div class="form-group {{ errors.username ? 'has-error' : '' }}">
        <div class="row">
          <div class="input-field col s12">
            <input type="text" name="username" id="username" class="validate" value="{{ old.username }}">
            <label for="username" data-error=" Username Can Not Be Used" data-success="Correct"><span class="glyphicon glyphicon-user"> Username</label>
          		  {% if errors.username %}
          		  <span class="help-block">{{errors.username | first}}</span>
          		  {% endif %}          
          </div>
        </div>
      </div>

    {# From Password #}
		  <div class="form-group {{ errors.password ? 'has-error' : '' }}">
        <div class="row">
          <div class="input-field col s12">
            <input type="password" name="password" id="password" class="validate" value="{{ old.password }}">
            <label for="password" data-error="Wrong Password" data-success="Correct"><span class="glyphicon glyphicon-eye-close"> password</label>
          		  {% if errors.password %}
          		  <span class="help-block">{{errors.password | first}}</span>
          		  {% endif %}          
          </div>
        </div>
      </div>		
      	   {# Button #}
	         <button type="submit" class="btn btn-default" style="margin:10px"><span class="glyphicon glyphicon-log-in"></span> Sign In</button>


            </form> 
          </div>
        </div>
    </div>
</div>
{% endblock %}	