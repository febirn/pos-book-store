{% extends 'templates/default.twig' %}
{% block title %} Edit User {% endblock %}

{% block headContent %} Edit User {% endblock %}

	{% block content %}

<form action="{{path_for('user.edit.post' , {('id'): profile.id})}}" method="post">
   <div class="box box-info">
            <div class="box-header">
             <center> <h3 class="box-title" style="font-family:impact">  Edit User</h3></center>
            </div>
            <div class="box-body">
              <!-- Date dd/mm/yyyy -->
              <div class="form-group {{ errors.username ? 'has-error' : '' }}" >
                <label>Username:</label>

                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-users"></i>
                  </div>
                  <input type="text" name="username" class="form-control" value="{{ profile.username }}" placeholder="Your Username">
                </div>
			{% if errors.username %}
		  		<span class="help-block">{{errors.username | first}}</span>
		  	{% endif %}                    
                <!-- /.input group -->
              </div>
              <!-- /.form group -->

              <!-- Date mm/dd/yyyy -->
              <div class="form-group {{ errors.name ? 'has-error' : '' }}">

                <label>Name:</label>

                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-user"></i>
                  </div>
                  <input type="text" name="name" class="form-control" value="{{ profile.name }}" placeholder="Your Name">
                </div>
			{% if errors.name %}
		  		<span class="help-block">{{errors.name | first}}</span>
		  	{% endif %}                 
                <!-- /.input group -->
              </div>
              <!-- /.form group -->

              <!-- phone mask -->
              <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                <label>Password :</label>

                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-lock"></i>
                  </div>
                  <input type="password" name="password" class="form-control" placeholder="Your Password">
                </div>
			{% if errors.password %}
		  		<span class="help-block">{{errors.password | first}}</span>
		  	{% endif %}                 
                <!-- /.input group -->
              </div>

		
	    <button type="submit" class="btn btn-default" style="margin:10px"><span class="glyphicon glyphicon-edit"></span> Edit</button>
  </form>
 
 </div>
</div>			
	{% endblock %}