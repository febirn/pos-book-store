{% extends 'templates/default.twig' %}

{% block title %} POS | Point Of Sale {% endblock %}

{% block headContent %} Add Product <i style="color:green" class="fa fa-plus-square "></i>
{% endblock %}

{% block content %}

<div class="box box-info"style="margin-top:30px">
	<div class="panel panel-default">
		<div class="panel-heading"><h3 class="panel-title"><strong>Add Book</strong></h3></div>
		<div class="panel-body">
			<form action="{{ path_for('product.add.post') }}" method="POST" enctype="multipart/form-data">
				{% if errors %}
				<div class="alert alert-danger">
					<a class="close" data-dismiss="alert" href="#">x</a>Mohon isi data produk dengan benar!
				</div>
				{% endif %}
				<div class="row">
					<div class="col-xs-12 col-sm-4 col-md-7">
						<div class="form-group {{ errors.title ? 'has-error' : '' }}">
							<label for="title">Title</label>
							<input type="text" name="title" id="title" class="form-control" value="{{ old.title }}">
							{% if errors.title %}
							<span class="help-block">{{errors.title | first}}</span>
							{% endif %}
						</div>
					</div>

					<div class="col-xs-12 col-sm-4 col-md-5">
						<div class="form-group {{ errors.category_id ? 'has-error' : '' }}">
							<label for="category_id">Category</label>
							<select name="category_id" class="form-control">
								<option value=""><h4>Select Category</h4></option>
								{% for data in category %}
								<option value="{{data.id}}">{{data.name}}</option>
								{% endfor %}
							</select>
							{% if errors.category_id %}
							<span class="help-block">{{errors.category_id | first}}</span>
							{% endif %}
						</div>
					</div>

				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-7">
						<div class="form-group {{ errors.price ? 'has-error' : '' }}">
							<label for="price">Price</label>
							<input type="number" name="price" id="price" class="form-control">
							{% if errors.price %}
							<span class="help-block">{{errors.price | first}}</span>
							{% endif %}
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-5">
						<div class="form-group {{ errors.image ? 'has-error' : '' }}">
							<label for="image">Image</label>
							<input type="file" name="image" id="image" class="form-control">
							{% if errors.image %}
							<span class="help-block">{{errors.image | first}}</span>
							{% endif %}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-12">
						<div class="form-group {{ errors.short_desc ? 'has-error' : '' }}">
							<label for=short_desc>Description</label>
							<textarea name="short_desc" id="short_desc" class="form-control">{{ old.short_desc }}</textarea>
							{% if errors.short_desc %}
							<span class="help-block">{{errors.short_desc | first}}</span>
							{% endif %}
						</div>
					</div>
				</div>
				<center><button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i>  ADD</button></center>
				<hr style="margin-top:10px;margin-bottom:10px;" >
			</form>
		</div>
	</div>
</div>

{% endblock %}
