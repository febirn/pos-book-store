{% extends 'templates/default.twig' %}

{% block title %} POS | Point Of Sale {% endblock %}

{% block headContent %} Edit <i style="color:#bfa600" class="fa fa-pencil-square-o"></i>
{% endblock %}

{% block content %}

<div class="box box-info"style="margin-top:30px">
	<div class="panel panel-default">
		<div class="panel-heading"><h3 class="panel-title"><strong>Edit Book</strong></h3></div>
		<div class="panel-body">
			<form action="{{ path_for('product.edit.post', {id: product.id}) }}" method="POST"  enctype="multipart/form-data">
				{% if errors %}
				<div class="alert alert-danger">
					<a class="close" data-dismiss="alert" href="#">x</a>Mohon isi data produk dengan benar!
				</div>
				{% endif %}
				<table width="100%">
					<tr>
						<td width="70%">
							<div class="row">
								<div class="col-xs-11 col-sm-6 col-md-7">
									<div class="form-group {{ errors.title ? 'has-error' : '' }}">
										<label for="title">Title</label>
										<input type="text" name="title" id="title" class="form-control" value="{{ product.title }}">
										{% if errors.title %}
										<span class="help-block">{{errors.title | first}}</span>
										{% endif %}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-12 col-sm-6 col-md-7">
									<div class="form-group {{ errors.category_id ? 'has-error' : '' }}">
										<label for="category_id">Category</label><br>
										<select name="category_id" class="form-control">
											{% for category in category %}
											<option value="{{category.id}}"{% if  product.category_id == category.id %} selected="selected"{% endif %}>{{category.name}}</option>
											{% endfor %}
										</select>
									</div>
								</div>
							</div>
						</td>
						<td>
							<img src="{{ base_url() }}/assets/image/{{ product.image }}" width="100" height="100"><br>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<div class="row">
								<div class="col-xs-12 col-sm-6 col-md-7">
									<div class="form-group {{ errors.price ? 'has-error' : '' }}">
										<label for="price">Price</label>
										<input type="number" name="price" id="price" class="form-control" value="{{ product.price }}">
										{% if errors.price %}
										<span class="help-block">{{errors.price | first}}</span>
										{% endif %}
									</div>
								</div>
								<div class="col-xs-12 col-sm-6 col-md-5">
									<div class="form-group {{ errors.image ? 'has-error' : '' }}">
										<label for="image">Image</label>
										<input type="file" name="image" id="image" class="form-control" placeholder="change image">
										<!-- <input type="text" name="image" id="image" class="form-control" value="{{ product.image }}"> -->
										{% if errors.image %}
										<span class="help-block">{{errors.image | first}}</span>
										{% endif %}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-12 col-sm-6 col-md-12">
									<div class="form-group {{ errors.short_desc ? 'has-error' : '' }}">
										<label for=short_desc>Description</label>
										<textarea name="short_desc" id="short_desc" class="form-control">{{ product.short_desc }}</textarea>
										{% if errors.short_desc %}
										<span class="help-block">{{errors.short_desc | first}}</span>
										{% endif %}
									</div>
								</div>
							</div>
						</td>
					</tr>
				</table>
				<center><button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i>  SAVE</button></center>
				<hr style="margin-top:10px;margin-bottom:10px;" >
			</form>
		</div>
	</div>
</div>

{% endblock %}
